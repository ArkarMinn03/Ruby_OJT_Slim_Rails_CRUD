<div class="container w-50 p-5">
  <h2 class="h3 text-center">Sign in to your account</h2>
  <div class="mx-auto" style="max-width: 500px;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-2">
        <%= f.label :email, :class => "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
      </div>

      <div class="field mb-2">
        <%= f.label :password, :class => "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.check_box :remember_me, :class => "fomr-check-input" %>
          <%= f.label :remember_me, :class => "fomr-check-label" %>
        </div>
      <% end %>

      <div class="actions mb-2">
        <%= f.submit "Log in", :class => "btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="d-flex flex-column w-100">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>